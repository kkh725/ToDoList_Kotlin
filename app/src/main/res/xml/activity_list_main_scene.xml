<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="anticipate">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/rv_todo" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/side_view2"
            android:layout_height="300dp"
            android:layout_width="wrap_content"
            motion:layout_editor_absoluteY="0dp"
            motion:layout_editor_absoluteX="-63dp" />
        <Constraint
            android:id="@+id/side_view2"
            android:layout_height="731dp"
            android:layout_width="wrap_content"
            motion:layout_editor_absoluteY="0dp"
            motion:layout_editor_absoluteX="-63dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/view2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/rv_todo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="381dp"
            android:layout_height="693dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            motion:layout_constraintTop_toTopOf="@+id/imageView"
            motion:layout_constraintStart_toEndOf="@+id/imageView"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView"
            motion:layout_constraintVertical_bias="0.514" />
    </ConstraintSet>
</MotionScene>